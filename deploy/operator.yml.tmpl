apiVersion: apps/v1
kind: Deployment
metadata:
  name: iofog-operator
  labels:
    app: iofog-operator
spec:
  replicas: 1
  selector:
    matchLabels:
      app: iofog-operator
  template:
    metadata:
      labels:
        app: iofog-operator
    spec:
      containers:
      - name: iofog-operator
        image: iofog/iofog-operator:dev
        env:
        - name: WATCH_NAMESPACE
          value: "default"
        - name: KUBERNETES_SERVICE_HOST
          value: localhost
        - name: KUBERNETES_SERVICE_PORT
          value: <<PORT>>